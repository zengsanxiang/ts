{
  "compilerOptions": {
    /* 源码目录 */
    "rootDir": "./src",            // 可选，但建议写
    /* 编译结果目录 */
    "outDir": "./dist",            // 关键行
    /* 其他常用 */
    "target": "ES2020",
    "module": "commonjs",          // 或 "ES2022"/"Node16" 视需求
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  /* 只编译 src 里的文件 */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}